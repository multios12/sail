    "version": "0.2.0",
    "configurations": [
        {
            "name": "debug react",
            "type": "pwa-chrome",
            "request": "launch",
            "reAttach": true,
            "url": "http://localhost:3000",
            "webRoot": "${workspaceFolder}",
            "preLaunchTask": "react-start",
            "postDebugTask": "terminate-react-start",
        },
        {
            "name": "go API Server",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "server/.",
            "args": ["../data", "-port", ":3001" ],
        }
    ]
}